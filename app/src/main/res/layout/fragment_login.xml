<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E2C"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TitleText"
            android:text="🔐 Добавить сессию" />

        <EditText
            android:id="@+id/phone_input"
            style="@style/AppEditText"
            android:hint="Номер телефона (напр., +380991234567)"
            android:inputType="phone" />

        <Button
            android:id="@+id/get_code_button"
            style="@style/AppButton"
            android:text="Получить код" />

        <EditText
            android:id="@+id/code_input"
            style="@style/AppEditText"
            android:hint="Код подтверждения"
            android:inputType="number" />

        <EditText
            android:id="@+id/password_input"
            style="@style/AppEditText"
            android:hint="Пароль 2FA (если есть)"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/login_button"
            style="@style/AppButton"
            android:text="Войти" />

    </LinearLayout>
</ScrollView>
