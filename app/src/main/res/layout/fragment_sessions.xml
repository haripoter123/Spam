<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E2C"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        style="@style/TitleText"
        android:text="📥 Управление сессиями" />

    <Button
        android:id="@+id/download_sessions_button"
        style="@style/AppButton"
        android:text="⬇️ Загрузить из облака" />

    <TextView
        android:id="@+id/sessions_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Локальные сессии:"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sessions_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1" />

</LinearLayout>
